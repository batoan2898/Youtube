<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp">

    <View
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewCenter"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_toStartOf="@id/viewCenter"
        android:id="@+id/imThumbRela"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleRela"
        android:layout_toEndOf="@id/viewCenter"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:maxLines="2"
        android:textStyle="bold"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvChannelRela"
        android:layout_below="@id/tvTitleRela"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/viewCenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvPublishRela"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/viewCenter"
        android:layout_below="@id/tvChannelRela"
        android:textSize="12sp"
        android:maxLines="1"/>

</RelativeLayout>